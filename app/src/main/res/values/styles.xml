<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--상단 1:1:1-->
    <style name="clac_top_ratio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--상단 텍스트뷰 -->
    <style name="clac_top_between">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20dp</item>
    </style>

    <!--하단 번호-->
    <style name="clac_bottom_num">
        <item name="android:onClick">calc_num</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">30dp</item>
    </style>

    <!--하단 번호 테이블로우-->
    <style name="clac_bottom_tablerow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--하단 기호-->
    <style name="clac_bottom_sign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">30dp</item>
        <item name="android:onClick">calc_sign</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--뮤직 버튼-->
    <style name="music">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">30dp</item>
        <item name="android:onClick">clkBtn</item>
    </style>

    <!--뮤직 레잇아웃-->
    <style name="musicLay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>



    </style>

</resources>
